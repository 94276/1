/* pages/test/test.wxss */
.container{
  background-color: #fff;
  width: 90%;
  height:90%;
  margin: 30rpx auto;
  border-radius:30rpx;
  box-shadow: 0 0 15rpx #a1a1a1;
  padding:40rpx 25rpx 25rpx 25rpx;
}

.container .title{
  text-align: center;
}

.container .type{
  display: flex;
  margin:0 auto;
  justify-content:center;
  width: 100%;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #d1d1d1;
}

.container .type view{
  border: 2rpx solid #d1d1d1;
  padding: 20rpx 60rpx;
  font-size: 35rpx;
  color: #a1a1a1;
}

.selectType{
  color:#f00 !important;
  border-color:#f00 !important;
}

.container .form_border{
  text-align: center;
}

.container .form_border{
  display: flex;
  justify-content: space-between;
  align-items:center;
  width: 100%;
  margin: 0 auto;
  margin-top: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #d1d1d1;
  font-size:35rpx;
}

.container .form_border label{
  text-align:left;
  font-size:30rpx;
}

.container .form_border input{
  text-align:right;
  font-size:30rpx;
}

.container .button{
  width: 100%;
  height:80rpx;
  background-color: #196ed6;
  color:#fff;
  font-size:35rpx;
  border-radius: 50rpx;
  margin-top: 30rpx;
}

.color_red {
  color: #f00;
}

.tips {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tips .tips_money {
  display: flex;
  flex-direction: column;
  color: #717171;
  font-size: 28rpx;
  margin: 25rpx 0;
  margin-top: 40rpx;
}

.notice {
  color: #1067D1;
  text-align: center;
  margin-bottom: 5rpx;
  font-size:28rpx;
  margin-top: 40rpx;
}