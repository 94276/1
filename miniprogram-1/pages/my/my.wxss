/* pages/contact/contact.wxss */
.userinfo {
  display: flex;
  width: 100%;
  height: 350rpx;
  flex-direction: column;
  align-items: center;
  background: #bed4fd;
}
.getbutton{
  display: flex;
  align-items: center;
  justify-content: center;
  width:40%;
  height:30%;
  font-size: 35rpx;
  margin: auto;
}
.account-bg {
  width: 100%;
  height: 150rpx;
}
.userinfo-avatar {
  width: 108rpx;
  height: 108rpx;
  margin: 60rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: rgb(10, 10, 10);
}
/* 订单 */
.order {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100rpx;
}
.myorder-text {
  font-size: 35rpx;
  color: gray;
  margin: 20rpx;
  width: 40%;
}
.myorderlook-text {
  font-size: 35rpx;
  color: gray;
  position: relative;
  right: 20rpx;
  width: 60%;
  text-align: right;
}
.next-image {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  right: 15rpx;
}
.navs {
  display: flex;
}
.nav-item {
  width: 30%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}
.nav-item .nav-image {
  width: 50rpx;
  height: 50rpx;
  margin: 5rpx;
}
.nav-item text {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: gray;
}
/* 列表 */
.person-list {
  display: flex;
  flex-direction: column;
}
.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  left:20rpx;
  height: 100rpx;
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.item-text {
  color: gray;
  font-size: 35rpx;
  margin-left: 20rpx;
}

.separate {
  position: absolute;
  margin:auto;
  width:100%;
  height:5px;
  background-color: rgb(235, 234, 234);
}
.line{
  width: 100%;
  height: 2rpx;
  background: lightgray;
}
.person-line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
  margin-left: 90rpx;
}