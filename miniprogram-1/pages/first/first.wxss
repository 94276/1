.tab{
  display: flex;
  text-align: center;
}

.tab .tab_item{
  height:90rpx;
  display: inline-block;
  line-height: 90rpx;
  margin:0 auto;
  padding: 0 20rpx;
  flex:1;
}
.select{
  color:#5b93ca;
  border-bottom:4rpx solid #5192d3
}

.box1{
  width: 90% ;
  margin: 30rpx auto;
  padding: 40rpx 20rpx;
  line-height: 1.5;
  background-color: rgb(245,245,247);
  border-radius: 20rpx;
  box-shadow: 2rpx 0 15rpx rgb(150, 149, 149);
  color: rgb(66, 121, 187);
}
